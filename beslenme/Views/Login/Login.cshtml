@model LoginDTO

<div class="container">
    <h1 class="display-4 text-center">Kullanıcı Giriş Paneli </h1>
    <hr />

    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/temp/dist/userLogin.css" rel="stylesheet" />
    <link href="~/temp/dist/style.css" rel="stylesheet" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Update">
                <div class="form-group">
                    <input type="text" asp-for="kullaniciAdi" class="form-control form-control-lg" placeholder="Lütfen Kullanıcı Adınızı Giriniz...">
                </div>

                <div class="form-group">
                    <input type="password" asp-for="sifre" class="form-control form-control-lg" placeholder="Lütfen şifrenizi Giriniz...">
                </div>

                <div class="form-group text-center">
                    <button type="submit" asp-action="Login" class="btn btn-success btn-lg">Giriş Yap</button>
                    <a href="@Url.Action("Register", "Login")" class="btn btn-primary btn-lg ml-2">Kayıt Ol</a>
                </div>
               
            </form>
        </div>
    </div>
</div>
