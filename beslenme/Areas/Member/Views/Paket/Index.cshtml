@model List<Paketler>
@{
    var successMessage = TempData["SuccessMessage"] as string;
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Paketler - Şeyma Kılınç</title>
   
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            transition: transform 0.2s;
        }

            .card:hover {
                transform: scale(1.05);
            }

        .btn-primary {
            background-color: #6f42c1;
            border-color: #6f42c1;
        }

            .btn-primary:hover {
                background-color: #5a33a1;
                border-color: #5a33a1;
            }

        .card-title, .card-text {
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-4 mb-4">Paketler</h1>
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @successMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@item.PaketAd</h5>
                            <p class="card-text">@item.PaketAciklama</p>
                            <p class="card-text"><strong>Fiyat: </strong>@item.PaketFiyat.ToString("C")</p>
                            <form asp-area="Member" asp-controller="Paket" asp-action="SepeteEkle" method="post">
                                <input type="hidden" name="id" value="@item.id" />
                                <button type="submit" class="btn btn-primary btn-block">Sepete Ekle</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    
  
</body>
</html>